<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".MenuProfesorActivity">

    <EditText
        android:id="@+id/edtexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_detail_questions_text"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/edtOpcion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_detail_questions_option_1"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/edtOpcion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_detail_questions_option_2"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/edtOpcion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_detail_questions_option_3"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/edtRespuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/txt_detail_questions_answer"
        android:enabled="false"
        />
    <CheckBox
        android:id="@+id/chkEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_detail_questions_edit" />



    <ImageButton
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert" />

    <ImageButton
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_save"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/btnEliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        />

</LinearLayout>